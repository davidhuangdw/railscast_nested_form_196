.page-header
  = link_to new_survey_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Survey
  %h1 Listing surveys

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @surveys.each do |survey|
        %tr
          %td= survey.name
          %td= link_to 'Show', survey
          %td= link_to 'Edit', edit_survey_path(survey)
          %td= link_to 'Destroy', survey, :data => { confirm: 'Are you sure?' }, :method => :delete
